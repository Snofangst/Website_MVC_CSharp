
@using BTLONLTWEB.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Image>

@{
    
}
<!DOCTYPE html>
<html style="font-size: 16px;" lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="DANH SÁCH HÌNH ẢNH SẢN PHẨM">
    <meta name="description" content="">
    <title>Home</title>
    <link rel="stylesheet" href="~/Content/HideProdMenu.css" media="screen">
    <link rel="stylesheet" href="~/Content/Table.css" media="screen">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i">


    <script type="application/ld+json">
        {
        "name": ""
        }
    </script>
    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="Home">
    <meta property="og:type" content="website">
</head>
<body class="u-body u-xl-mode" data-lang="en">
    <section class="u-align-center u-clearfix u-gradient u-section-1" id="sec-e6e1">
        <div class="u-clearfix u-sheet u-sheet-1">
            @if (Model.Count() == 0)
            {
                <h2 class="u-custom-font u-font-source-sans-pro u-text u-text-1">HIỆN TẠI KHÔNG CÓ ẢNH SẢN PHẨM</h2>
            }
            else
            {
            <h2 class="u-custom-font u-font-source-sans-pro u-text u-text-1">DANH SÁCH HÌNH ẢNH SẢN PHẨM</h2>
            
            <div class="u-expanded-width u-table u-table-responsive u-table-1">
                <table class="u-table-entity">
                    <colgroup>
                        <col width="50%">
                        <col width="50%">
                    </colgroup>
                    <thead class="u-palette-5-dark-3 u-table-header u-table-header-1">
                        <tr style="height: 49px;">
                            <th class="u-border-2 u-border-no-left u-border-no-right u-border-no-top u-border-palette-5-dark-1 u-table-cell u-table-cell-1">ID HÌNH ẢNH</th>
                            <th class="u-border-2 u-border-no-left u-border-no-right u-border-no-top u-border-palette-5-dark-1 u-table-cell u-table-cell-2">Hình ảnh sản phẩm</th>
                        </tr>
                    </thead>
                    <tbody class="u-black u-table-body u-table-body-1">
                        @foreach (var item in Model)
                        {if (item.IdImage.ToString().Substring(0, 3) == "IMG")
                                {
                                    <tr style="height: 69px;">
                                        <td class="u-border-1 u-border-palette-5-dark-1 u-table-cell u-table-cell-4">@item.IdImage</td>
                                        <td style="text-align:center" class="u-border-1 u-border-palette-5-dark-1 u-table-cell u-table-cell-5"><img style="width:100px;height:auto;" src="@Url.Content(@item.FileImage)" /></td>
                                    </tr>
                                }

                        }
                    </tbody>
                </table>
                <br />
            </div>
            }
        </div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        <div class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("DS_HinhAnhSanPham", new { page = page }))

        </div>
    </section>
   
    <style>
        .pagination{
            text-decoration: none;
        }
        .pagination li {
          color: black;
          padding: 8px 16px;
          transition: background-color .3s;
          border: 1px solid #ddd;
          display:inline;
          background-color: black;
          color:white !important;
        }

        .pagination li.active {
          background-color: white;
          color:black !important;
          border: 1px solid black;
        }
        .u-overlap.u-overlap-transparent:not(.u-overlap-contrast) .u-header :not(.u-nav-item) > a, .u-gradient > .u-container-layout > a, .u-image:not(.u-shading) > .u-container-layout > a, a
        {
            color:inherit;
        }

        .pagination a:hover:not(.active) {background-color: #ddd;}
    </style>
</body>
</html>