@model BTLONLTWEB.Models.Receiver_Form
@{
    
}
<!DOCTYPE html>
<html style="font-size: 16px;" lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="Thông tin giao hàng">
    <meta name="description" content="">
    <title>Receiver</title>
    <link rel="stylesheet" href="~/Content/Receiver_Form.css" media="screen">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald:200,300,400,500,600,700|Bangers:400">



    <script type="application/ld+json">
        {
        "name": "",
        "sameAs": []
        }
    </script>
    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="Page 2">
    <meta property="og:type" content="website">
</head>
<body class="u-body u-xl-mode" data-lang="en">
    <section class="u-clearfix u-section-1" id="sec-fb18">
        <div class="u-clearfix u-sheet u-sheet-1">
            <div class="u-grey-light-2 u-hidden-md u-hidden-sm u-hidden-xs u-map u-map-1">
                <div class="embed-responsive">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.0672956111666!2d106.62646731474928!3d10.806157892301389!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752be27d8b4f4d%3A0x92dcba2950430867!2sHCMC%20University%20of%20Food%20Industry!5e0!3m2!1sen!2s!4v1670159369987!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
            <h1 class="u-custom-font u-font-oswald u-text u-text-default u-text-1">Thông tin giao hàng</h1>
            <div class="u-expanded-width-xs u-form u-form-1">
                @using (Html.BeginForm("Receiver_Form", "Home", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.OrderID, new
                    {
                        @Value = Model.OrderID
                    })
                    @Html.HiddenFor(model => model.Delivery, new
                    {
                        @Value = "XÁC NHẬN"
                    })
                    @Html.HiddenFor(model => model.UserID, new
                    {
                        @Value = Model.UserID
                    })
                    <div class="u-clearfix u-form-spacing-20 u-form-vertical u-inner-form" style="padding: 10px" source="email" name="form">
                        <div class="u-form-group u-form-name u-label-top">
                            <label for="name-3b9a" class="u-label">Họ và tên (*)</label>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "@class = u-label", style = "color:red; font-weight:bold;text-shadow:1px 1px black" })
                            @Html.TextBoxFor(model => model.Name, new
                            {
                                placeholder="Nhập họ và tên",
                                @Value = Model.Name,
                                id = "name-3b9a",
                                name = "name",
                                @class="u-border-2 u-border-black u-input u-input-rectangle u-radius-10 u-input-1"
                            })
                        </div>
                        <div class="u-form-email u-form-group u-label-top">
                            <label for="email-3b9a" class="u-label">Số điện thoại (*)</label>
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "@class = u-label", style = "color:red; font-weight:bold;text-shadow:1px 1px black" })
                            @Html.TextBoxFor(model => model.PhoneNumber, new
                            {
                                @Value = Model.PhoneNumber,
                                placeholder = "Nhập số điện thoại",
                                id = "email-3b9a",
                                @class = "u-border-2 u-border-black u-input u-input-rectangle u-radius-10 u-input-2"
                            })
                          
                        </div>
                        <div class="u-form-group u-form-message u-label-top">
                            <label for="message-3b9a" class="u-label">Địa chỉ (*)</label>
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "@class = u-label", style = "color:red; font-weight:bold;text-shadow:1px 1px black" })
                            @Html.TextAreaFor(model => model.Address, new
                            {
                                @Value = Model.Address,
                                rows = "4",
                                cols = "50",
                                id = "message-3b9a",
                                name = "message",
                                @class="u-border-2 u-border-black u-input u-input-rectangle u-radius-10 u-input-3"
                            })
                        </div>
                        <div class="u-align-center u-form-group u-form-submit u-label-top">
                            <a href="#" class="u-border-2 u-border-active-black u-border-black u-border-hover-palette-5-base u-btn u-btn-round u-btn-submit u-button-style u-none u-radius-10 u-btn-1">Submit</a>
                            <input type="submit" value="submit" class="u-form-control-hidden">
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

</body>
</html>